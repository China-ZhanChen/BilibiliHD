<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <Preference
        app:iconSpaceReserved="false"
        app:key="test"
        app:title="@string/test" />
    <Preference
        app:iconSpaceReserved="false"
        app:key="sync"
        app:title="@string/sync" />
    <com.takisoft.preferencex.SimpleMenuPreference
        app:defaultValue="0"
        app:entries="@array/danmaku_visibility_entries"
        app:entryValues="@array/danmaku_visibility_values"
        app:iconSpaceReserved="false"
        app:key="danmaku_visibility"
        app:title="@string/visibility"
        app:useSimpleSummaryProvider="true" />
    <SwitchPreferenceCompat
        app:defaultValue="false"
        app:iconSpaceReserved="false"
        app:key="danmaku_draw_debug_info"
        app:title="@string/draw_debug_info" />
    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/danmaku_drawing" />
    <com.takisoft.preferencex.SimpleMenuPreference
        app:defaultValue="0"
        app:entries="@array/danmaku_style_entries"
        app:entryValues="@array/danmaku_style_values"
        app:iconSpaceReserved="false"
        app:key="danmaku_style"
        app:title="@string/danmaku_style"
        app:useSimpleSummaryProvider="true" />
    <EditTextPreference
        android:inputType="numberDecimal"
        app:defaultValue="0"
        app:iconSpaceReserved="false"
        app:key="danmaku_shadow_dx"
        app:title="shadow dx"
        app:useSimpleSummaryProvider="true" />
    <EditTextPreference
        android:inputType="numberDecimal"
        app:defaultValue="0"
        app:iconSpaceReserved="false"
        app:key="danmaku_shadow_dy"
        app:title="shadow dy"
        app:useSimpleSummaryProvider="true" />
    <EditTextPreference
        android:inputType="numberDecimal"
        app:defaultValue="5"
        app:iconSpaceReserved="false"
        app:key="danmaku_shadow_radius"
        app:title="shadow radius"
        app:useSimpleSummaryProvider="true" />
    <com.takisoft.preferencex.SimpleMenuPreference
        app:defaultValue="0"
        app:entries="@array/danmaku_typeface_entries"
        app:entryValues="@array/danmaku_typeface_values"
        app:iconSpaceReserved="false"
        app:key="danmaku_typeface"
        app:title="@string/font"
        app:useSimpleSummaryProvider="true" />
    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/display" />
    <CheckBoxPreference
        app:defaultValue="false"
        app:iconSpaceReserved="false"
        app:key="duplicate_merging"
        app:title="@string/duplicate_merging" />
    <EditTextPreference
        android:inputType="numberDecimal"
        app:defaultValue="1.0"
        app:iconSpaceReserved="false"
        app:key="danmaku_duration_coeff"
        app:title="@string/danmaku_duration_coeff"
        app:useSimpleSummaryProvider="true" />
    <EditTextPreference
        android:inputType="numberDecimal"
        app:defaultValue="1"
        app:iconSpaceReserved="false"
        app:key="text_size"
        app:title="@string/text_size_coeff"
        app:useSimpleSummaryProvider="true" />
    <EditTextPreference
        android:inputType="numberDecimal"
        app:defaultValue="40"
        app:iconSpaceReserved="false"
        app:key="danmaku_line_height"
        app:title="@string/line_height"
        app:useSimpleSummaryProvider="true" />
    <EditTextPreference
        android:inputType="number"
        app:defaultValue="0"
        app:iconSpaceReserved="false"
        app:key="danmaku_margin_top"
        app:title="@string/margin_top"
        app:useSimpleSummaryProvider="true" />
    <EditTextPreference
        android:inputType="number"
        app:defaultValue="0"
        app:iconSpaceReserved="false"
        app:key="danmaku_margin_bottom"
        app:title="@string/margin_bottom"
        app:useSimpleSummaryProvider="true" />
    <EditTextPreference
        android:inputType="numberDecimal|numberSigned"
        app:defaultValue="-1"
        app:dialogMessage="@string/minus_one_is_auto_zero_is_unlimited"
        app:iconSpaceReserved="false"
        app:key="danmaku_maximum_visible_size_in_screen"
        app:title="@string/maximum_visible_size_in_screen"
        app:useSimpleSummaryProvider="true" />
    <SwitchPreferenceCompat
        app:defaultValue="true"
        app:iconSpaceReserved="false"
        app:key="prevent_danmaku_overlapping"
        app:title="@string/allow_danmaku_overlapping" />
    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/block" />
    <MultiSelectListPreference
        app:entries="@array/block_by_place_entries"
        app:entryValues="@array/block_by_place_values"
        app:iconSpaceReserved="false"
        app:key="block_by_place"
        app:title="@string/block_by_place" />
</PreferenceScreen>